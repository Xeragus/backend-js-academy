<%- include('partials/header') %>
  <div class="app">
    <p>Please insert todo data:</p>

    <form action="/update/<%- todo.id %> " method="post" class="todo-form" id="create_form">
      Name <input type="text" name="title" id="" value="<%- todo.title %>"><br>
      Description <input type="text" name="description" id="" value="<%- todo.description %>">

      <button type="submit" class="submit-btn">Update</button>
    </form>
  </div>
<%- include('partials/footer') %>